<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/nt_actionbar_multichoicemode"
    android:layout_width="match_parent"
    android:layout_height="45.33dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    >

    <TextView
         android:id="@+id/nt_multichoice_cancel" 
         android:text="@android:string/cancel" 
         android:layout_width="wrap_content"
         android:layout_height="26dip"
         android:minWidth="47dip"
         android:textColor="@android:color/white"
         android:gravity="center"
         android:background="@drawable/ruimei_list_top_cancel_bg_final"
         android:textSize="15sp"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/nt_multichoice_all_pick"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:minWidth="47dip"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ruimei_list_top_all_pick_bg_final"
        android:text="@string/nt_contacts_all_pick" />

    <TextView
          android:id="@+id/nt_multichoice_text_select"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:textSize="15sp"
          android:textColor="@android:color/white"
          android:layout_centerHorizontal="true" />
</RelativeLayout>